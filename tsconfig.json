{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "target": "es2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "moduleResolution": "node"
  },
  "include": ["dia-*/**/*.ts", "vite.config.ts", "eslint.config.js"],
  "exclude": ["node_modules", "dist"]
}
